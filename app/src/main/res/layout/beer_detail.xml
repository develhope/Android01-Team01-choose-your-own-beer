<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    tools:context=".BeerDetail">

    <ImageView
        android:id="@+id/imageBeer"
        android:layout_width="match_parent"
        android:layout_height="242px"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ichnusa" />
<!--ImageIchnusa-->
    <ImageButton
        android:id="@+id/favourite_button"
        android:layout_width="55dp"
        android:layout_height="37dp"
        android:background="@color/white"
        android:contentDescription="@string/favourite_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emptystar" />
  <!--emptyStar-->
    <TextView
        android:id="@+id/titleBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="top"
        android:textAppearance="@style/beer_name.detailed_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/ichnusa" />
<!--Icnhusa Title-->
    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/beer_text.size_detailed_view"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/small_size"/>
    <!-- cl -->
    <TextView
        android:id="@+id/longDescription"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:text="@string/detail_ichnusa"
        android:textAppearance="@style/beer_text.detailed_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/detail_ichnusa" />
    <!-- Colore giallo dorato luminoso con schiuma fine e persistente.
    Al naso sprigiona aromi di fiori d'arancio, caramello e luppolo, accompagnati da un delicato
    sentore di miele in un complesso di eleganza e piacevolezza
    che si conferma anche all'assaggio, dove freschezza e rotonditÃ  avvolgono una persistenza
    moderatamente amarognola di grande equilibrio. Ideale per un aperitivo di formaggi e salumi,
    si accompagna bene anche a pesci al forno saporiti. -->
</LinearLayout >