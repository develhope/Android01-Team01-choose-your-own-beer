<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_cardview"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagePath"
                android:layout_width="@dimen/Image_layout_width"
                android:layout_height="@dimen/Image_layout_height"
                android:layout_marginStart="@dimen/marginStart_Image"
                android:layout_marginTop="@dimen/marginTop_layout_Image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ichnusa"
                 />


            <TextView
                android:id="@+id/title"
                style="@style/beer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginStart_title"
                android:text="@string/ichnusa"
                app:layout_constraintStart_toEndOf="@+id/imagePath"
                app:layout_constraintTop_toTopOf="@+id/imagePath"
                />

            <TextView
                android:id="@+id/size"
                style="@style/beer_text.detailed_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/marginTop_layout"
                android:text="@string/small_size"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title"
                />

            <TextView
                android:id="@+id/shortDescription"
                style="@style/beer_text"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/layout_width"
                android:layout_marginTop="@dimen/marginTop_shortDescription"
                android:layout_marginEnd="@dimen/marginEnd_layout"
                android:textSize="@dimen/textSize_layout"
                android:text="@string/preview_ichnusa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/size"
                app:layout_constraintTop_toBottomOf="@+id/size"
                />

            <Button
                android:id="@+id/button"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_button"
                android:layout_marginBottom="@dimen/marginBottom_layout"
                android:text="@string/go_to_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/shortDescription"
                app:layout_constraintTop_toBottomOf="@+id/shortDescription"
                />

            <ImageButton
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginStart="@dimen/imageStart_layout"
                android:layout_marginBottom="@dimen/marginBottom_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/emptystar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>